<h2><%= @task.title%></h2>
<p style="background-color: yellow"><%= @task.details %></p>
<p style="background-color: yellow"><%= @task.completed %></p>
<p>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Edit",
  task_edit_path(@task)
%>
</p>
